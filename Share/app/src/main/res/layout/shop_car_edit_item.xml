<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.melvin.share.modelview.item.ShopCarEditItemViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/list_background"
        android:onClick="@{viewModel.onItemClick}">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:button="@drawable/dot_select"
            app:onCheckedChangeListener="@{viewModel.choiceListener}" />

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            app:imageUrl="@{viewModel.imgUrl}" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ddd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/product_img">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="产品名称"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/page_18" />

                <TextView
                    android:id="@+id/product_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_name"
                    android:layout_marginTop="20dp"
                    android:text="￥224.00"
                    android:textSize="@dimen/page_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/product_rate"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/smallbtn_rectangle_background"
                        android:gravity="center"
                        android:onClick="@{viewModel.onDeleteClick}"
                        android:padding="5dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/smallbtn_rectangle_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@{viewModel.number}" />

                    <TextView
                        android:id="@+id/add"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/smallbtn_rectangle_background"
                        android:gravity="center"
                        android:onClick="@{viewModel.onAddClick}"
                        android:padding="5dp"
                        android:text="+" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>