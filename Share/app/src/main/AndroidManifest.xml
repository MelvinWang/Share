<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.melvin.share">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 写入外部存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 读取外部存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <!-- 使用照相机权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 自动聚焦权限 -->

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.melvin.share.app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".ui.activity.common.MainActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 注册登录 -->
        <activity android:name=".ui.activity.common.LoginActivity" />
        <activity android:name=".ui.activity.common.RegisterFirstActivity" />
        <activity android:name=".ui.activity.common.RegisterSecondActivity" />
        <!-- 个人中心 -->
        <activity android:name=".ui.activity.selfcenter.MyRebateActivity" />
        <activity android:name=".ui.activity.selfcenter.OpenshopFirstActivity" />
        <activity android:name=".ui.activity.selfcenter.OpenshopSecondActivity" />
        <activity android:name=".ui.activity.selfcenter.SettingActivity" />
        <activity android:name=".ui.activity.selfcenter.ManageAddressActivity" />


        <activity android:name=".ui.activity.ProductInfoActivity" />
        <activity
            android:name=".ui.activity.ShopInformationActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />


        <!--    <activity android:name=".ui.activity.common.MainActivity"/>-->
    </application>

</manifest>
